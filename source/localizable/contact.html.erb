---
layout: mainsite
---  

<% @title = t(:contact_title) %>
<% @description = t(:contact_description) %>

<% content_for :page_picture do %>
  <% image_path('piano.jpg') %>
<% end %>


<!-- How to Reach Me -->
<section id="getintouch" class="fadeInRightBig">
    <div class="container">
        <h1 class="title">
            <%= t(:getInTouch) %>
        </h1>
    </div>
    
    <div class="container">        
        <h2 class="sub-title">
            <%= t(:getInTouchSubtitle) %>
        </h2>
        
        <div class="row">
            <div class="col-sm-8">
                <form class="contact" id="contactForm">
                    <div class="row">
                        <div class="col-sm-6">
                            <label class="required" for="name">
                                <%= t(:yourName) %>
                                <input type="text" name="name" id="name" placeholder="Cylia Chamade" required>
                            </label>
                        </div>
                        <div class="col-sm-6">
                            <label class="required" for="email">
                                <%= t(:yourEmail) %>
                                <input type="email" name="email" id="email" placeholder="cylia.chamade@cats-eye.com" required>
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="budget">
                                Budget
                                <select id="budget" name="budget">
                                    <option disabled="" selected=""><%= t(:select) %></option>
                                    <option> < 500€</option>
                                    <option>500 €  - 999 €</option>
                                    <option>1,000 € - 1,999 €</option>
                                    <option>2,000 € - 4,999 €</option>
                                    <option>5,000 € - 9,999 €</option>
                                    <option>10,000 € - 19,999 €</option>
                                    <option> > 20,000 €</option>
                                </select>
                            </label>
                        </div>
                        <div class="col-sm-6">
                            <label for="time" >
                                <%= t(:completionTime) %>
                                <select id="time" name="time">
                                    <option disabled="" selected=""><%= t(:select) %></option>
                                    <option><%= t(:lessThanAWeek) %></option>
                                    <option><%= t(:threeWeeks) %></option>
                                    <option><%= t(:oneMonth) %></option>
                                    <option><%= t(:threeMonths) %></option>
                                    <option><%= t(:sixMonths) %></option>
                                    <option><%= t(:continuous) %></option>
                                </select>
                            </label>
                        </div>
                    </div>
                    <label class="required">
                        Message
                        <textarea rows="7" placeholder="<%= t(:catsEyeMessage) %>" required type="textarea" name="message"></textarea>
                    </label>
                    <div class="add-sm-top text-center">
                        <button class="btn btn-danger" type="submit" onClick="_gaq.push(['_trackEvent', 'Contact', 'Send', '<%= I18n.locale.to_s %>']);"><i class="fa fa-envelope"></i> &nbsp; <%= t(:send) %></button>
                    </div>
                </form>
                <div class="col-md-12" id="formSuccessMessage" style="display:none;">
                    <%= t(:messageSent) %>
                </div>
                <div class="col-md-12" id="formErrorMessage" style="display:none;">
                    <%= t(:messageNotSent) %>
                </div>
            </div>
            <div class="col-sm-4 contact-address">
                <h3 class="heading turquoise add-xs-top"><%= t(:stayInTouch) %></h3>
                <p><%= t(:stayInTouchSubtitle) %></p>
                
                <!-- <h3 class="heading blue add-sm-top">Social Networks</h3> -->
                <address><abbr title="Address"><i class="fa fa-thumb-tack"></i></abbr><%= t(:contactLocation) %></address>
                <div class="social-networks">                
                    <a href="http://fr.linkedin.com/in/celinemartinet1/" target="_blank"><i class="fa fa-linkedin-square"></i></a>
                    <a href="https://github.com/celine-m-s" target="_blank"><i class="fa fa-github-square"></i></a>                     
                    <a href="https://www.facebook.com/profile.php?id=100008250871769"><i class="fa fa-facebook-square"></i></a>
                    <a href="https://twitter.com/celine_m_s" target="_blank" ><i class="fa fa-twitter-square"></i></a>
                    <a href="https://plus.google.com/u/0/+CelineMartinetSanchez/posts" target="_blank" ><i class="fa fa-google-plus-square"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>