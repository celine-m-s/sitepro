---
layout: base
---

<% content_for(:page_title, "Céline Martinet Sanchez") %>

<section class="bg-white animated">
    <div class="container">
		<% blog.articles.group_by {|a| a.data.category }.each do |category, articles| %>
			<% category_color = data.categories[category.to_sym].color %>
			<div class="card card-categories mb-3 m-auto" style="max-width: 800px;">
			  <div class="row no-gutters">
			    <div class="col-md-4 p-4 border-right">
			    	<a href="<%= category_path(category) %>">
				    	<h2 class="heading <%= category_color %> card-title text-white">
				    		<%= category.capitalize %>
				    	</h2>
			    	</a>
			    	<p class="text-justify"><%= data.categories[category.to_sym].description %></p>
			    	<a href="<%= category_path(category) %>">
			    		<button type="button" class="w-100 btn btn-outline-<%= category_color %>">Toutes les brèves</button>
			    	</a>
			    </div>
			    <div class="col-md-8">
			      <div class="card-body">
			      	<ul class="list-unstyled">
					    <% articles[0...3].each do |article| %>
						    <li class="separator">
						        <h3 class="card-title"><a href="<%= article.url %>" class="text-<%= data.categories[category.to_sym].color %>"><%= article.title %></a></h3>
						        <ul class="list-unstyled">
						            <li class="tags">
								        <% article.tags.each do |tag| %>
						                	<a href="<%= tag_path(tag) %>" class="badge badge-secondary"><%= tag %></a>
								        <% end %>
							        </li>
						        </ul>
						        <p class="card-text"><%= article.summary %></p>
						        <a href="<%= article.url %>" class="text-<%= category_color %>">Lire la suite...</a>
						    </li>
					    <% end %>	
			      	</ul>
			      </div>
			    </div>
			  </div>
			</div>
			  <h5></h5>
			  <ul>
			  </ul>

		<% end %>

	</div>
</section>
