---
pageable: true
per_page: 3
layout: base
---

<div class="container">
    <div class="row">
        <div class="col-md-9 col-sm-8 ">
        <% blog.articles[0..10].each do |article| %>
          <article>
              <div class="row">
                  <div class="col-md-3 col-sm-4 text-right">
                      <div class="date">
                          <div class="day"><%= article.date.strftime("%d") %></div>
                          <div class="month"><%= article.date.strftime("%b, %Y") %></div>
                      </div>
                      <div class="post-info">
                          <!-- <span><strong>Author:</strong> Barney Stinson</span> -->
                          <span><strong>Category:</strong> <%= article.data.category %></span>
                          <span><strong>Tags:</strong> 
                          <% article.tags.split(',').each do |tag|  %>
                            <%= link_to "#{tag}", tag_path(tag)%>
                          <% end %>
                          </span>
                      </div>
                  </div>
                  <div class="col-md-9 col-sm-8">
                      <h3><%= link_to article.title, (data.site.url + "/" + article.path)%></h3>
                      <div class="featured-photo">
                          <img src="<%= data.site.imagepath + article.data.picture %>" alt="featured" />
                      </div>
                      <div class="post">
                          <p><%= article.summary %></p>
                      </div>
                  </div>
              </div>
          </article>
        <% end %>



