<!doctype html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="<%= @lang %>"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="<%= @lang %>"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="<%= @lang %>"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="<%= @lang %>"> <!--<![endif]-->
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <!-- Social networks and SEO -->
    <%= partial 'partials/social-networks-generic' %>
    <!-- END Social notworks and SEO -->

    <!-- Favicon rocks! -->
    <%= favicon_tag 'images/favicon.png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "bootstrap.min.css" %>
    <%= stylesheet_link_tag "picons.css" %>
    <%= stylesheet_link_tag "style.css" %>
    <%= stylesheet_link_tag "branding/default.css" %>    
    <!-- END Stylesheets -->

    <!-- Why are you still using IE ? -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- For preloads -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <%= javascript_include_tag 'modernizr.custom.js' %>

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700' rel='stylesheet' type='text/css'>
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  </head>
  <body id="top">
    <% current_locale = I18n.locale.to_s %>
    <!-- Newsletter -->
    <%= partial 'partials/newsletter_' + current_locale %>
    <!-- end newsletter -->
    <!-- Header -->
    <!-- Le Header -->
    <header class="slider">
        <div id="slider" class="carousel slide">
            <!-- Le Carousel Control -->
<!--             <ul class="carousel-indicators">
                <li data-target="#slider" data-slide-to="0" class="active"></li>
                <li data-target="#slider" data-slide-to="1"></li>
                <li data-target="#slider" data-slide-to="2"></li>
            </ul> -->
            
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://d3ui957tjb5bqd.cloudfront.net/images/screenshots/products/9/92/92908/ggx1h1bzckwqo6sjespodoqom4aez21uzdqg5xe6atbqntjlmtcyj5eexyvpytsi-o.jpg?1396629939" alt="First slide image">
                </div>
                <div class="item">
                    <img src="https://d3ui957tjb5bqd.cloudfront.net/images/screenshots/products/7/74/74384/img_4340-o.jpg?1392309446" class="slider-photo" alt="First slide image">
                </div>
                <div class="item">
                    <img src="https://d3ui957tjb5bqd.cloudfront.net/images/screenshots/products/7/74/74381/img_0650-o.jpg?1392309446" alt="First slide image">
                </div>
            </div>
        </div>
        <div class="overlay">
        <p id="languages"><a href="<%= data.site.english.url %>"><%= t :english %></a>  ||  <a href="<%= data.site.french.url %>"><%= t :french %></a></p>
            <article>
            <% if current_locale == "fr" %>
              <% root = data.site.french.url %>
            <% else %>
              <% root = data.site.english.url %>
            <% end %>

              <div class="top-logo-wrapper">
                <a href="<%= root %>"><%= image_tag 'logo-cms-white.svg', alt: 'Logo Céline Martinet Sanchez', class: 'top-logo' %></a>
              </div>
            <% if current_page.url == '/' || current_page.url == '/fr' %>
                <h1 class="header-name">Céline MS</h1>
            <%  else %>
                <h2 class="header-name">Céline MS</h2>

            <% end %>
                <h2><%= t(:developer) %> &middot; <%= t(:teacher) %> &middot; <%= t(:entrepreneur) %></h2>
            </article>
        </div>
    </header>
    <!-- Navbar -->
    <%= partial 'partials/navbar_' + current_locale %>
    <!-- end navbar -->

    <%= yield %>

    <%= partial "partials/footer.erb" %>

        <!-- Scripts -->
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
        <%= javascript_include_tag 'bootstrap.min.js' %>
        <%= javascript_include_tag 'library.js' %>
        <%= javascript_include_tag 'scripts.js' %>
        <script>
        $(function() {
            Grid.init();
        });
        // Init Google Map
        GoogleMapInit();
        ShowPins();  
        </script>
      </body>
    </html>
