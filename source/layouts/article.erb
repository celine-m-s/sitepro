<!doctype html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="<%= @lang %>"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="<%= @lang %>"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="<%= @lang %>"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="<%= @lang %>"> <!--<![endif]-->
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <!-- Social networks and SEO -->
    <%= partial 'partials/social-networks' %>
    <!-- END Social notworks and SEO -->

    <!-- Favicon rocks! -->
    <%= favicon_tag 'images/favicon.png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "bootstrap.min.css" %>
    <%= stylesheet_link_tag "picons.css" %>
    <%= stylesheet_link_tag "style.css" %>
    <%= stylesheet_link_tag "branding/default.css" %>    
    <!-- END Stylesheets -->

    <!-- Why are you still using IE ? -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- For preloads -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <%= javascript_include_tag 'modernizr.custom.js' %>

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700' rel='stylesheet' type='text/css'>
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  </head>
  <body id="top" class="single">
  <% current_locale = I18n.locale.to_s %>
  <!-- Newsletter -->
  <%= partial 'partials/newsletter_' + current_locale %>
  <!-- end newsletter -->
  <!-- Article header -->
  <%= partial 'partials/articleheader' %>
  <!-- end Article header -->
  <!-- Navbar -->
  <%= partial 'partials/blog_navbar_' + current_locale %>
  <!-- end navbar -->


  <section class="article-header" style="background-image: url(<%= data.site.imagepath+current_article.data.picture %>)">
      <div class="article-title-container">
          <div class="container">
              <div class="article-title">
                  <h1 class="title">
                      <%= current_page.data.title %>
                  </h1>
                  <h2 class="meta">
                      <!-- <span><i class="fa fa-user"></i> <a href="#">Jonathan</a></span> -->
                      <span><i class="fa fa-calendar"></i><%= current_page.data.date %></span> 
                      <!-- strftime ('%b %e') -->
                       <span><i class="fa fa-slack"></i> 
                       <a href="<%= category_path(current_page.data.category) %>"><%= current_page.data.category %>
                       </a>
                       </span>
                  </h2>
              </div>
          </div>
      </div>
  </section>

  <section id="blog" class="bg-white">
      <div class="container">
          <article>
            <div class="content">
                <%= yield %>
            </div>
            <div class="tags add-top">
              <span>Tags: </span>
              <% current_page.data.tags.split(',').each do |tag|  %>
              <%= link_to "#{tag}", tag_path(tag), class:"btn btn-primary btn-sm" %>
              <% end %>

            </div>

          </article>
      </div>
      <!-- closes container -->
  </section>


  <section id="comments" class="comments">
    <div class="container">
      <!-- Disqus comments -->
      <div id="disqus_thread"></div>
      <script type="text/javascript">
          var disqus_shortname = 'c-m-s';
          var disqus_identifier = '<%= current_page.url %>';
              var disqus_title = '<%= current_page.title %>';
              var disqus_url = '<%= data.site.english.url+current_page.url %>';
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
    <!-- End disqus comments -->
    </div>
  </section>

<%= partial "partials/footer.erb" %>




    <!-- Scripts -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <%= javascript_include_tag 'bootstrap.min.js' %>
    <%= javascript_include_tag 'library.js' %>
    <%= javascript_include_tag 'scripts.js' %>
  </body>
</html>
