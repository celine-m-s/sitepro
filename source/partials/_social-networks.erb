<!-- Update your html tag to include the itemscope and itemtype attributes. -->
<html itemscope itemtype="http://schema.org/Article">
<!-- Place this data between the <head> tags of your website -->
<title><%= current_page.data.title || data.site.title %></title>
<meta name="description" content="<%= current_page.data.description || data.site.description %>">

<!-- Google Authorship and Publisher Markup -->
<!-- <link rel="author" href="https://plus.google.com/[Google+_Profile]/posts"/>
<link rel="publisher" href="https://plus.google.com/[Google+_Page_Profile]"/> -->
<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="<%= current_page.data.title || data.site.title %>">
<meta itemprop="description" content="<%= current_page.data.description || data.site.description %>">
<meta itemprop="image" content="<%= data.site.imagepath+current_page.data.picture || data.site.picture %>">
<!-- Twitter Card data -->
<meta name="twitter:card" content="<%= data.site.imagepath+current_page.data.twitterpicture || data.site.twitterpicture %>">
<meta name="twitter:site" content="<%= data.site.twitter.name %>">
<meta name="twitter:title" content="<%= current_page.data.title || data.site.title %>">
<meta name="twitter:description" content="<%= current_page.data.description || data.site.description %>">
<meta name="twitter:creator" content="<%= data.site.twitter.name %>">
<!-- Twitter summary card with large image must be at least 280x150px -->
<meta name="twitter:image:src" content="<%= data.site.imagepath+current_page.data.twitterpicture || data.site.twitterpicture %>">
<!-- Open Graph data -->
<meta property="og:title" content="<%= current_page.data.title || data.site.title %>" />
<meta property="og:type" content="article" />
<meta property="og:url" content="<%= current_page.path %>" />
<meta property="og:image" content="<%= data.site.imagepath+current_page.data.picture || data.site.picture %>" />
<meta property="og:description" content="<%= current_page.data.description || data.site.description %>" />
<meta property="og:site_name" content="<%= t(:websitetitle) %>" />
<meta property="article:published_time" content="<%= current_article.date %>" />
<meta property="article:modified_time" content="<%= current_article.date %>" />
<meta property="article:section" content="<%= current_page.data.category %>" />
<meta property="article:tag" content="<%= current_article.tags.to_s %>" />
<meta property="fb:admins" content="Facebook numberic ID" />